// Main Stylus file
@import 'fonts.styl'

body
	width: 100vw
	height: 100vh
	margin: 0
	padding: 0
	background-color: #f0f0f0
	color: #333

	display: flex
	flex-direction: column
	align-items: center
	justify-content: center

.container
	width: 100%
	max-width: 80vw
	padding: 4rem

h1
	position: relative
	color: #000
	font-size: 40px
	line-height: 1.2
	font-weight: 100
	word-spacing: 0.3em
	letter-spacing: 0.02em
	margin: 0
	font-family: var(--font-primary)
	//letter-spacing: 0.1em

.written-text
	.char-mask
		//outline: 1px solid red
		position: relative

		.char
			font-size: 1em
			opacity: 0.1
			visibility: hidden

		svg
			position: absolute
			top: 0
			left: 0
			width: auto
			height: 100%
			pointer-events: none

		.size
			font-family: var(--font-secondary)
			font-size: 0.07em
			font-weight: 400
			padding: 0.4em
			color: #000
			position: absolute
			top: 0
			right: 0
			pointer-events: none